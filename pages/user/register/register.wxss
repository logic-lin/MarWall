page {
  background-color: #EEE;
}
.container {
  position: relative;
  margin: 20rpx auto;
  border-radius: 10rpx;
  width: 90%;
  padding: 20rpx 30rpx;
  background: white;
}
.tip{
  position: absolute;
  z-index: 100;
  left: 50%;
  transform: translateX(60rpx);
  top:-10rpx;
  width: 150rpx;
  color: white;
  font-size: 25rpx;
  border-radius: 20rpx 20rpx 20rpx 0;
  padding: 10rpx;
  background-color:rgba(230,79,128,0.9);
}
.tip::before{
  content: "";
  position: absolute;
  width: 0;
  height: 0;
  border-bottom: 5px solid rgba(230,79,128,0.9);
  border-top: 5px solid transparent;
  border-left: 5px solid transparent;
  border-right: 5px solid rgba(230,79,128,0.9);  
  right: 100%;
  bottom: 0;
}

.avatar{
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 50% !important;
  padding: 0 !important;
  flex: 7;
  margin: 20rpx 0 ;
}
.avatar>image{
  width:100%;
  height: 100%;
}
.item{
  position: relative;
  width: 100%;
  display: flex;
  align-content: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid gray;
  font-size: 32rpx;
}
.item:last-child{
  border-bottom: 0;
}
.item>input,.certify{
  flex: 7;
}
.item>text{
  color: black;
  flex: 3;
  padding: 0 20rpx;
  font-size: 30rpx;
}
.item>picker{
  position: relative;
  flex: 7;
}

picker::after{
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top:0;
  right: 40rpx;
  transform: rotate(45deg) translateY(50%);
  border-right: 1rpx solid gray;
  border-bottom: 1rpx solid gray;
}
.certify>view{
  width:150rpx;
  height: 150rpx;
  position: relative;
}
.certify image{
  width:100%;
  height: 100%;
  border-radius: 10rpx;
}
.certify icon{
  position: absolute;
  right: 0;
  top:0;
  transform: translate(50%,-50%);
}
.code-button{
  position: absolute;
  right: 0;
  top:50%;
  width: 130rpx;
  text-align: center;
  padding: 10rpx;
  font-size: 28rpx;
  background-color: rgba(230,79,128,0.8);
  color: white;
  border-radius: 5rpx;
  transform: translateY(-50%);
  z-index: 100;
}
.commit{
  margin-top: 30rpx;
  font-size: 34rpx;
  text-align: center;
  color: white;
  background-color: rgb(230,79,128);
  height: 80rpx;
  width: 100%;
}
.commit{
  line-height: 80rpx;
}