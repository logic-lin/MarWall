/* pages/user/feedback/feedback.wxss */
page {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container {
  position: relative;
  width: 94%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 60rpx;
  border: 1px solid #eeeeee;
}
.form-container {
  width: 96%;
	display: flex;
  justify-content: left;
	align-items: center;
  min-height: 100rpx;
  font-size: 30rpx;
}
.form-container .title {
  width: 20%;
  font-size: 30rpx;
  text-align: left;
	height: 50rpx;
	position: relative;
  line-height: 50rpx;
  margin-left: 30rpx;
}
.form-container+.form-container {
	border-top: 1rpx solid #eeeeee;
}
.required-icon {
  width: 15rpx;
  height: 15rpx;
  position: absolute;
  left: -20rpx;
  top: 0rpx;
}
textarea {
  width: 100%;
  height: 200rpx;
  margin: 30rpx 26rpx 30rpx;
}
/* 图片 */
.upload-image-container, .choose-label-container {
  width: 79%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.upload-image {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin: 10rpx;
}
.cancel-icon {
  position: absolute;
  top: 0;
  right: 0;
}
/* 阴影 */
.shadow {
  box-shadow: 0 10rpx 30rpx -15rpx rgba(0, 0, 0, 0.2);
}
.release-botton {
  width: 94%;
  height: 80rpx;
  background-color: #777777;
  color: white;
  border-radius: 7rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
}