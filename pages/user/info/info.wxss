page {
  background-color: #EEE;
}
input{
  position: relative;
  display: inline-block;
  overflow: visible;
}
.info-top{
  background-color: #E64F80;
  position: relative;
  color: white;
}
.info-top::after{
  position: absolute;
  top:100%;
  left: 0;
  display: block;
  content: '';
  width: 100%;
  height: 60rpx;
  background-color: #E64F80;
  border-bottom-left-radius: 500%;
  border-bottom-right-radius: 500%;
  z-index:-1;
}
.info-top-bottom{
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
}
.info-top-top,.info-top-bottom>view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}
.avatar{
  margin: 20rpx 0;
  width: 130rpx; 
  height: 130rpx;
  border-radius: 50%;
  background-color: white;
}
.nickname{
  font-size: 34rpx;
}
.info-mid{
  margin-top:20rpx;
}
.item{
  z-index: 999;
  background-color: white;
  position: relative;
  top:0;
  left:0;
  margin: 0 30rpx 40rpx 30rpx;
  padding: 20rpx 0 40rpx 0;
  box-shadow: 1rpx 1rpx 1rpx rgba(0, 0, 0, 0.1);
  transition: all .5s ease-in-out;
  font-size: 30rpx;
}
.header{

  display: flex;
  font-size: 30rpx;
  align-items: center;
  text-align: left;
  color:#E64F80;
}
.header>text{
  flex:11;
}

.modify{
  flex:1;
  width:40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.header::before{
  display: inline-block;
  content: '';
  background-color: #E64F80;
  height: 36rpx;
  width: 18rpx;
  margin-right: 20rpx;
}
.detail{
  color: rgb(86, 90, 90);
  padding-top:15rpx;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}
picker{
  display: inline;
  
}
.item>image{
  margin: 20rpx 0 0 40rpx; 
}
.photo{
  position: relative;
  margin: 20rpx 0 0 40rpx;
}
.delete-icon{
  position: absolute;
  left:-13rpx;
  top:-13rpx;
  z-index:999;
  
}
.code-button{
  position: absolute;
  right: 0;
  bottom:5rpx;
  width: 120rpx;
  text-align: center;
  padding: 5rpx;
  font-size: 26rpx;
  background-color: rgba(230,79,128,0.8);
  color: white;
  border-radius: 5rpx;
  
  z-index: 100;
}
