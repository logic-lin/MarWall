/* pages/flow/flow.wxss */
/* 主页面 */
page {
  background-color: #eeeeee;
}
/* 主容器 */
.flow-main {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 选择栏 */
.flow-select-order-list {
  position: fixed;
  top: 0;
  z-index: 10;
  width: 750rpx;
  height: 55rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}
.flow-select-order-item {
  width: inherit;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
.select {
  border-bottom: 8rpx solid #E64F80;
}
/* 发帖列表 */
.flow-flowpost-list {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 55rpx;
}
/* 下方提示语 */
.load-more-status{
  font-size: 22rpx;
  margin: 20rpx 0 35rpx 0;
}