/* components/post/post.wxss */
/* 主容器 */
.post-main {
  width: 720rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
/* 顶部布局 */
.post-top {
  position: relative;
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin: 20rpx 0rpx 20rpx;
}
.post-avatar {
  width: 20%;
  display: flex;
  align-items: center;
}
.post-avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #eeeeee;
  border: 1px solid #EEE;
}
.post-top-right{
  width: 55%;
}
.post-nickname-and-labels {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  justify-content: left;
}
.post-nickname {
  font-size: 30rpx;
  color: #58646b;
  font-weight: 400;
}
.post-label-list {
  display: flex;
  margin-left: 20rpx;
  margin-bottom: 5rpx;
}
.post-label-name {
  font-size: 20rpx;
  background-color: #E64F80;
  color: white;
  border-radius: 16rpx;
  padding: 5rpx 12rpx 5rpx;
  margin-left: 10rpx;
}
.post-price {
  width: 25%;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  justify-content: flex-end;
}
.post-price-number {
  font-size: 32rpx;
  color: red;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}
/* 中部布局 */
.post-mid {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.post-title {
  width: 100%;
  font-size: 33rpx;
  font-weight: 500;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.post-content {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.post-image-list {
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.post-image-item {
  width: 165rpx;
  height: 165rpx;
  margin: 15rpx 15rpx 0rpx;
  background-color: #EEE;
}
/* 底部布局 */
.post-bottom {
  position: relative;
  width: 90%;
  height: 50rpx;
  margin: 0 0rpx 10rpx;
  font-size: 27rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.post-postedtime {
  font-weight: 300;
  font-size: 28rpx;
  color: #8799a3;
}
.post-interactive {
  position: absolute;
  right: 0;
  display: flex;
}
.post-interactive-item {
  display: flex;
  align-items: center;
  color: #ee628e;
  margin: 0rpx 0rpx 0rpx 13rpx;
  font-size: 28rpx;
  font-weight: 300;
}
.post-interactive-icon {
  width: 25rpx;
  height: 25rpx;
  margin-right: 20rpx;
}
/* 阴影 */
.shadow{
  box-shadow: 0 10rpx 30rpx -15rpx rgba(0, 0, 0, 0.2);
}